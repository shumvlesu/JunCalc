<resources>

    <style name="Theme.JunCalc" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/number_button_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/gradient</item>

    </style>

    <style name="ButtonNumber" parent="Theme.JunCalc">

        <item name="colorPrimary">@color/number_button_color</item>
        <item name="background">@drawable/button_stile_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/number_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ButtonCalc" parent="Theme.JunCalc">

        <item name="colorPrimary">@color/calc_button_color</item>
        <item name="background">@drawable/button_stile_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/number_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="OperationCalc" parent="Theme.JunCalc">

        <item name="colorPrimary">@color/operation_button_color</item>
        <item name="background">@drawable/button_stile_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/number_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

</resources>